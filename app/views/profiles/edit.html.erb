<div class="col col-3">
  <%= render '/profiles/left' %>
</div>
<div class="col col-9">
  <div class="shadow bg-light my-5">
    <h5 class="card-header">Б</h5>
    <div class="card-body">
      <% if @profile.baner_top_img.present? %>     
        <div>
          <a href="<%= @profile.baner_top_url %>" target="_blank">
            <%= image_tag @profile.baner_top_img.url, class: "d-block w-100" %>
          </a>
        </div>
      <% end %>
      <% if @profile.errors.any? %>
        <p class="text-danger"><%= t('common.errors') %></p>
      <% end %>
      <%= simple_form_for @profile, html: { multipart: true }  do |f| %>
        <div class="form-group">
          <%= f.input :baner_top_img, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.input :baner_top_url, collection: Server.where(user_id: current_user.id).pluck('urlserver'), class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.input :baner_top_date_start, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.input :baner_top_date_end, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit 'Сохранить', class: 'btn btn-success w-25 mt-5' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
