<div class="col col-3">
  <%= render '/profiles/left' %>
</div>
<div class="col col-9">
  <div class="shadow bg-light my-5">
    <h5 class="card-header">Общая информация</h5>
    <div class="card-body">
      <% if @info.user.unconfirmed_email.present? %>
      <div class="alert alert-warning">
        <div>В настоящее время ожидает подтверждения email для: <%= @info.user.unconfirmed_email %></div>
      </div>  
      <% end %>
      <%= @info.user.username %>
      <%= @info.user.email %>
    </div>
  </div>
</div>
