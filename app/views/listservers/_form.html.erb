
<% if @server.errors.any? %>
  <div>
      
      <h2>SSSSSSSSSSSSSSSSSSSSSS</h2>  
    <ul>
      <% @server.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        
      <% end %>
    </ul>
  </div>
<% end %> 

<%= @server.errors.any? %>

<%= form_with model: @server, class: "form-group" do |f| %>
<% puts @server.errors.full_messages %>
<%= @server.errors.any? %>
<div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, class: 'form-control', placeholder: 'Название сервера' %>
</div>

<div class="form-group">
    <%= f.label :urlServer %>
    <%= f.url_field :urlServer, class: 'form-control' %>
</div>

<div class="form-group">
    <%= f.label :version %>
    <%= f.select :version, @versions, class: 'form-control' %>
</div>
 
<div class="form-group">
    <%= f.label :dateStart %>
    <%= f.date_field :dateStart, class: 'form-control' %>
</div>

<div class="form-group">
    <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
</div>

<% end %>

