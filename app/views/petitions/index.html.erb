<div class="col col-3">
  <%= render 'left' %>
</div>
<div class="col col-9">
  <div class="shadow bg-light my-5">
    <h5 class="card-header">Заявки</h5>
    <div class="card-body">
      <table class="table table-striped">
        <thead>
          <tr class="text-center">
            <th class="text-left" style="width: 8%" scope="col">Номер заявки</th>
            <th scope="col">Тема заявки</th>
            <th style="width: 20%"  scope="col">Обновлено</th>
            <th style="width: 20%"  scope="col">Статус</th>
            <th style="width: 1%"  scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @petitions.last_update.each do |petition| %>
            <tr>
              <th scope="row">№ <%= petition.id %></th>
              <td><%= petition.topic %></td>
              <td class="text-center"><%= petition.updated_at.strftime("%d-%m-%Y # %H:%M ") %></td>
              <td class="text-center"> <span class="badge badge-<%= status_petition_color(petition.status) %>"><%= t("petition.#{petition.status}") %> </span></td>
              <td><%= link_to 'Посмотреть', petition, class: 'btn btn-sm btn-info p-0' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
