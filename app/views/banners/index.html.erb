<div class="col col-3">
  <%= render '/profiles/left' %>
</div>
<div class="col col-9">
  <div class="shadow bg-light my-5">
    <div class="card-header">
      <div class="row justify-content-between">
        <h5 class="m-3">Мои баннеры</h5>
        <span><%= link_to 'Добавить баннер', new_banner_path, class: "btn btn-outline-primary m-2" %></span></div>
    </div>
    <div class="card-body">
      <% if @banners.blank? %>
        <div class="alert alert-secondary font-weight-bold text-center">
          У вас нет баннеров.
        </div>
      <% end %>
      <% @banners.each do |banner| %>
        <li class="list-group-item border-secondary">
          <div class="media">
            <% if banner.banner_image? %>
              <%= image_tag banner.banner_image.top.url, class: "m-1", width: "384", height: "120" if banner.position_before_type_cast < 1 %>
              <%= image_tag banner.banner_image.menu.url, class: "m-1", width: "120", height: "200" if banner.position_before_type_cast == 1 %>
              <%= image_tag banner.banner_image.skyscraper.url, class: "m-1", width: "64", height: "240" if banner.position_before_type_cast > 1 %>
            <% else %>
              <svg class="bd-placeholder-img mr-3" width="240" height="120">
                <title>Баннер</title><rect width="100%" height="100%" fill="#868e96" />
                <text x="24%" y="54%" fill="#dee2e6" >Нет изображения</text>
              </svg>
            <% end %>
          </div>
          <hr>
          <table class="table-sm">
            <tbody>
              <tr>
                <th class="w-25" scope="row">Расположение банера:</th>
                <td class="w-50"><%= banners_position[banner.position.to_sym] %></td>
              </tr>
              <tr>
                <th class="w-25" scope="row">Адрес сервера:</th>
                <td><%= link_to banner.server.urlserver, banner.server.urlserver, target: "_blank" %></td>
              </tr>
              <tr>
                <th class="w-25" scope="row">Показ баннера:</th>
                <td class="w-50">c <%= banner.date_start %> до <%= banner.date_end %></td>
              </tr>
              <tr>
                <th class="w-25" scope="row">Статус публикации баннера:</th>
                <td class="w-50"><%= banner_publication_status(banner.publish)  %></td>
              </tr>
            </tbody>
          </table>
          <div class="my-5">
            <div class="row justify-content-between mx-2">
              <% if banner.created? %>
                <%= link_to 'Изменить', edit_banner_path(banner), class: 'btn btn-outline-dark btn-sm w-25' %>
                <%= link_to 'Оплатить', banner_path(banner), class: 'btn btn-outline-success btn-sm w-25' %>
              <% end %>
              <%= link_to 'Удалить', banner_path(banner), class: 'btn btn-outline-danger btn-sm w-25', method: :delete, data: { confirm: 'Вы уверены?' } %>
            </div>
          </div>
        </li>
        <br>
      <% end %>
    </div>
  </div>
</div>
