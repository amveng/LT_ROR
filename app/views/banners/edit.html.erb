<div class="col col-3">
  <%= render '/profiles/left' %>
</div>
<div class="col col-9">
  <div class="shadow bg-light my-5">
    <h5 class="card-header">Изменение баннера</h5>
    <div class="card-body">
      <% if @banner.errors.any? %>
        <p class="text-danger"><%= t('common.errors') %></p>
      <% end %>
      <%= simple_form_for @banner, html: { multipart: true }  do |f| %>
        <div class="form-group">
          <%= f.input :position, as: :radio_buttons, collection: Banner.positions, value_method: :first, label: 'Расположение банера', error: 'Укажите тему сообщения',  class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.input :banner_image, label: 'Выберете изображение в формате jpeg, jpg или png',  class: 'form-control' %>
        </div>
         <div class="form-group">
          <%= f.input :server_id, collection: current_user.servers, label: 'сервер',  class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.input :date_start, label: 'Показывать баннер с',  class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.input :date_end, label: 'Показывать баннер до',  class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit 'Сохранить', class: 'btn btn-success w-25 mt-5' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
