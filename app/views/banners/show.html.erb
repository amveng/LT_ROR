<div class="col col-3">
  <%= render '/profiles/left' %>
</div>
<div class="col col-9">
  <div class="shadow bg-light my-5">
    <h5 class="card-header">Оплата баннера</h5>
    <div class="card-body">
      <li class="list-group-item border-secondary">
        <div class="media">
          <% if @banner.banner_image? %>
            <%= image_tag @banner.banner_image.top.url, class: "m-1", width: "384", height: "120" if @banner.position_before_type_cast < 1 %>
            <%= image_tag @banner.banner_image.menu.url, class: "m-1", width: "120", height: "200" if @banner.position_before_type_cast == 1 %>
            <%= image_tag @banner.banner_image.skyscraper.url, class: "m-1", width: "64", height: "240" if @banner.position_before_type_cast > 1 %>
          <% else %>
            <svg class="bd-placeholder-img mr-3" width="240" height="120">
              <title>Баннер</title><rect width="100%" height="100%" fill="#868e96" />
              <text x="24%" y="54%" fill="#dee2e6" >Нет изображения</text>
            </svg>
          <% end %>
        </div>
        <hr>
        <table class="table-sm">
          <tbody>
            <tr>
              <th class="w-25" scope="row">Расположение банера:</th>
              <td class="w-50"><%= @banner.position %></td>
            </tr>
            <tr>
              <th class="w-25" scope="row">Адрес сервера:</th>
              <td><%= link_to @banner.server.urlserver, @banner.server.urlserver, target: "_blank" %></td>
            </tr>
            <tr>
              <th class="w-25" scope="row">Показ баннера:</th>
              <td class="w-50">c <%= @banner.date_start %> до <%= @banner.date_end %></td>
            </tr>
          </tbody>
        </table>
        <div class="my-5">
          <div class="row justify-content-center mx-2">
            <%= link_to "Оплатить #{@payment} LTC", edit_banner_path(@banner), class: 'btn btn-outline-success btn-sm w-75 mb-4' %>
            <%= link_to 'Вернуться к списку баннеров', banners_path, class: 'btn btn-outline-dark btn-sm w-75' %>
          </div>
        </div>
      </li>
    </div>
  </div>
</div>
