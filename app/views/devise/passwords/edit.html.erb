<div class="shadow col-md-4 offset-md-4 bg-white my-5">
  <h2 class="text-center m-4">Изменить пароль</h2>
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <div class="field">
      
     
      <%= f.input :password, autofocus: true ,placeholder: 'Новый пароль', class: 'form-control mb-3' %>
    </div>
    <div class="field">
      
      <%= f.input :password_confirmation, class: 'form-control mb-3' %>
    </div>
    <div class="actions">
      <%= f.submit "Изменить", class: 'btn btn-block btn-success' %>
    </div>
  <% end %>
  <hr>
  <p>
    <%= link_to 'Войти', new_session_path(resource_name) %>
    <%= link_to 'Зарегистрироваться', new_registration_path(resource_name), class: 'float-right' %>
  </p>
</div>
