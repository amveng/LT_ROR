<div class="shadow col-md-4 offset-md-4 bg-white my-5">
  <h2 class="text-center m-4">Регистрация</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
      
      <%= f.input :email, autofocus: true, autocomplete: "email", class: 'form-control mb-3'%>
    </div>
    <div class="field">
     
      <%= f.input :username, class: 'form-control mb-3'  %>
    </div>
    <div class="field">
     
      <%= f.input :password, autocomplete: "new-password", class: 'form-control mb-3'  %>
    </div>
    <div class="field">
     
      <%= f.input :password_confirmation, autocomplete: "new-password", class: 'form-control mb-4'  %>
    </div>
    <div>
    <%= recaptcha_v3(action: 'registration', turbolinks: true) %>
    </div>
    <div class="actions">
      <%= f.submit "Зарегистрироваться", class: 'btn btn-block btn-success' %>
    </div>
  <% end %>
  <hr>
  <p>Или войдите с помощью других сервисов</p>
  <%= render "devise/shared/omniauth" %>
  <hr>
  <p>Уже зарегистрированы?<%= link_to 'Войдите', new_session_path(resource_name), class: 'float-right' %></p>
</div>
