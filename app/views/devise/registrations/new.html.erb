<div class="shadow col-md-4 offset-md-4 bg-white my-5">
  <h2 class="text-center m-4">Регистрация</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mb-3'%>
    </div>
    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username, class: 'form-control mb-3'  %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t('.characters minimum') %>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control mb-3'  %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control mb-4'  %>
    </div>
    <div class="actions">
      <%= f.submit "Зарегистрироваться", class: 'btn btn-block btn-success' %>
    </div>
  <% end %>
  <hr>
  <p>Или войдите с помощью других сервисов</p>
  <%= render "devise/shared/omniauth" %>
  <hr>
  <p>Уже зарегистрированы?<%= link_to 'Войдите', new_session_path(resource_name), class: 'float-right' %></p>
</div>
